rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Applications collection
    match /applications/{applicationId} {
      // Public can create (submit application)
      allow create: if true;
      // Only admins can update/delete. Public can read if accepted.
      allow read: if isAdmin() || resource.data.status == 'accepted';
      allow update, delete: if isAdmin();
    }

    // Email Templates collection
    match /emailTemplates/{templateId} {
      // Only admins can do anything
      allow read, write: if isAdmin();
    }

    // Email Logs collection
    match /emailLogs/{logId} {
      // Only admins can read
      allow read: if isAdmin();
      // No one can write directly (only Cloud Functions)
      allow write: if false;
    }

    // Admins collection (to store admin UIDs)
    match /admins/{userId} {
      // Allow user to read their own doc to check if they are admin
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Managed manually in console
    }
  }
}
